<%= form_for [@article, @comment], html: {class: "container-fluid"} do |f| %>
  <% if @comment.errors.any? %>
    <div id='error_messages'>
      <h2><%= pluralize(@comment.errors.count, 'error') %> prevented this comment from being saved in the system</h2>
      <ul>
        <% @comment.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='form-group'>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </div>
  <div class='form-group'>
    <%= f.submit 'Submit these edits' %>
  </div>
<% end %>
