<%= form_tag (sessions_path), class: 'form-inline' do %>
  <div class='form-group'>
  <%= label_tag :username %>
  <%= text_field_tag :username%>
  </div>
  <div class = 'form-group'>
  <%= label_tag :password %>
  <%= password_field_tag :password%>
  </div>

  <div class='form-group'>
    <%= submit_tag 'log in' %>
  </div>
<% end %>
