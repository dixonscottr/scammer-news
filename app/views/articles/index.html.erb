<% if logged_in? %>
<div class = 'row'>
  <div class = 'col-md-2 col-md-offset-5'>
    <a href='<%= new_article_path %>'>
      <button type="button" class="btn btn-default btn-md">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Add article
      </button>
    </a>
  </div>
</div>
<br / >
<% end %>

<% @articles.each do |article| %>
<div class="list-group">
  <a href="<%= article_path(article) %>" class="list-group-item list-group-item-action">
    <h5 class="list-group-item-heading"><%= article.title %></h5>
    <p class="list-group-item-text">Posted by: <%= article.author.username %><span>several timespans ago</span></p>
  </a>
<% end %>
</div>
