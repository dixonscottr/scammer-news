<%= form_for @article, html: {class: "container-fluid"} do |f| %>
  <% if @article.errors.any? %>
    <div id='error_messages'>
      <h2><%= pluralize(@article.errors.count, 'error') %> prevented this article from being saved in the system</h2>
      <ul>
        <% @article.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='form-group'>
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </div>
  <div class='form-group'>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class='form-group'>
    <%= f.submit 'Submit me' %>
  </div>
<% end %>
